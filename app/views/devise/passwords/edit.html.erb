<div class="col-md-4 col-md-offset-4">
<h2>Change your password</h2>

<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.error_notification %>

  <%= f.input :reset_password_token, as: :hidden %>
  <%= f.full_error :reset_password_token %>

  <div class="form-inputs">
    <label>Nueva contraseña</label>
    <%= f.input :password, label: "New password", required: true, autofocus: true, wrapper:false, label:false, input_html: {class: "box"}, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
    <label>Repetir nueva contraseña</label>
    <%= f.input :password_confirmation, label: "Confirm your new password", required: true, wrapper:false, label:false, input_html: {class: "box"} %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Change my password", class: "btn-primary btn btn-full m-t-20" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
