<div class="col-md-6 col-md-offset-3">
  <div class="row">
    <div class="col-md-8">
      <h2>Edit <%= resource_name.to_s.humanize %></h2>
    </div>
    <div class="col-md-4">
      <%= link_to "Volver", :back, class: "btn btn-default m-t-10 btn-full" %>
    </div>  
  </div>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <label>Email</label>
    <%= f.input :email, required: true, autofocus: true, wrapper:false, label:false, input_html: {class: "box"}  %>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
    <% end %>
    <label>Nueva contrase単a</label>
    <%= f.input :password, autocomplete: "off", hint: "Dejalo en blanco si no quieres cambiar tu contrase単a", required: false, wrapper:false, label:false, input_html: {class: "box"}  %>
    <label>Repetir nueva contrase単a</label>
    <%= f.input :password_confirmation, required: false, wrapper:false, label:false, input_html: {class: "box"}  %>
    <label>Contrasela antigua</label>
    <%= f.input :current_password, hint: "Necesitamos que confirmes los cambios con tu contrase単a antigua", required: true, wrapper:false, label:false, input_html: {class: "box"}  %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Update", class: "btn btn-primary btn-full m-t-20" %>
  </div>
<% end %>

<p>Unhappy? <%= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>


</div>
